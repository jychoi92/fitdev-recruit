@model FitDevRecruit.Models.Report

@{
    ViewData["Title"] = "FitDev 인적성 평가 - 결과";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-info text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        평가 결과 리포트
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="card-title mb-3">지원자 정보</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>이름:</strong></td>
                                    <td>@Model.CandidateName</td>
                                </tr>
                                <tr>
                                    <td><strong>응시일:</strong></td>
                                    <td>@Model.TestDate.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>지원자 ID:</strong></td>
                                    <td>@Model.CandidateId</td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="col-md-6">
                            <h6 class="card-title mb-3">점수 현황</h6>
                            <div class="score-cards">
                                <div class="score-card mb-3 p-3 border rounded">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="score-label">기술 점수</span>
                                        <span class="score-value @(Model.TechnicalScore >= 60 ? "text-success" : "text-warning")">
                                            @Model.TechnicalScore / 100
                                        </span>
                                    </div>
                                    <div class="progress mt-2">
                                        <div class="progress-bar @(Model.TechnicalScore >= 60 ? "bg-success" : "bg-warning")" 
                                             style="width: @(Model.TechnicalScore)%"></div>
                                    </div>
                                </div>
                                
                                <div class="score-card mb-3 p-3 border rounded">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="score-label">인성 점수</span>
                                        <span class="score-value @(Model.PersonalityScore >= 10 ? "text-success" : "text-warning")">
                                            @Model.PersonalityScore / 20
                                        </span>
                                    </div>
                                    <div class="progress mt-2">
                                        <div class="progress-bar @(Model.PersonalityScore >= 10 ? "bg-success" : "bg-warning")" 
                                             style="width: @(Model.PersonalityScore * 5)%"></div>
                                    </div>
                                </div>
                                
                                <div class="score-card mb-3 p-3 border rounded">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="score-label">문제해결력</span>
                                        <span class="score-value @(Model.ProblemSolvingScore >= 20 ? "text-success" : "text-warning")">
                                            @Model.ProblemSolvingScore / 100
                                        </span>
                                    </div>
                                    <div class="progress mt-2">
                                        <div class="progress-bar @(Model.ProblemSolvingScore >= 20 ? "bg-success" : "bg-warning")" 
                                             style="width: @(Model.ProblemSolvingScore)%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="evaluation-summary">
                        <h6 class="card-title mb-2">종합 평가</h6>
                        <div class="alert @(Model.Summary.Contains("우수") ? "alert-success" : "alert-warning")">
                            <i class="fas fa-clipboard-check me-2"></i>
                            @Model.Summary
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <a href="@Url.Action("Index", "Recruit")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            처음으로 돌아가기
                        </a>
                        <button onclick="window.print()" class="btn btn-secondary">
                            <i class="fas fa-print me-2"></i>
                            결과 출력하기
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.score-card {
    background-color: #f8f9fa;
    transition: all 0.3s ease;
}

.score-card:hover {
    background-color: #e9ecef;
    transform: translateY(-1px);
}

.score-label {
    font-weight: 600;
    color: #495057;
}

.score-value {
    font-weight: bold;
    font-size: 1em;
}

@@media print {
    .btn {
        display: none !important;
    }
}
</style> 