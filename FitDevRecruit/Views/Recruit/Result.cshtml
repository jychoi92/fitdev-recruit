@model FitDevRecruit.Models.Report

@{
    ViewData["Title"] = "인적성 평가 - 결과";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold">평가 결과 리포트</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="result-desc mb-4">
                            <div class="result-desc-1">인적성 평가 완료</div>
                            <div class="result-desc-2">솔로몬텍 인재 채용 평가 결과입니다.</div>
                        </div>
                    </div>
                    <div class="row align-items-stretch">
                        <div class="col-md-6 mb-4 d-flex flex-column h-100">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h6 class="mb-0 fw-bold">지원자 정보</h6>
                                </div>
                                <div class="card-body">
                                    <div class="applicant-info-box">
                                        <div class="info-item mb-2">
                                            <span class="info-icon me-2"><i class="fas fa-user"></i></span>
                                            <span class="info-label fw-bold me-1">이름:</span>
                                            <span class="info-value">@Model.CandidateName</span>
                                        </div>
                                        <div class="info-item mb-2">
                                            <span class="info-icon me-2"><i class="fas fa-envelope"></i></span>
                                            <span class="info-label fw-bold me-1">이메일:</span>
                                            <span class="info-value">@Model.CandidateEmail</span>
                                        </div>
                                        <div class="info-item mb-2">
                                            <span class="info-icon me-2"><i class="fas fa-user-graduate"></i></span>
                                            <span class="info-label fw-bold me-1">신입/경력:</span>
                                            <span class="info-value">@(Model.CandidateLevel == "Junior" ? "신입" : Model.CandidateLevel == "Senior" ? "경력" : Model.CandidateLevel)</span>
                                        </div>
                                        <div class="info-item mb-2">
                                            <span class="info-icon me-2"><i class="fas fa-users"></i></span>
                                            <span class="info-label fw-bold me-1">지원 팀:</span>
                                            <span class="info-value">@(Model.CandidateTeam == "Backend" ? "백엔드" : Model.CandidateTeam == "Frontend" ? "프론트엔드" : Model.CandidateTeam == "Data" ? "데이터" : Model.CandidateTeam == "Infra" ? "인프라" : Model.CandidateTeam)</span>
                                        </div>
                                        <div class="info-item mb-2">
                                            <span class="info-icon me-2"><i class="fas fa-calendar-alt"></i></span>
                                            <span class="info-label fw-bold me-1">응시일:</span>
                                            <span class="info-value">@Model.TestDate.ToString("yyyy-MM-dd HH:mm")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4 d-flex flex-column h-100">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h6 class="mb-0 fw-bold">점수 현황</h6>
                                </div>
                                <div class="card-body">
                                    <div class="score-cards">
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">기술 점수</span>
                                                <span class="score-value text-brand">
                                                    @Model.TechnicalScore / 100
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-brand" style="width: @(Model.TechnicalScore)%"></div>
                                            </div>
                                        </div>
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">인성 점수</span>
                                                <span class="score-value text-brand">
                                                    @Model.PersonalityScore / 100
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-brand" style="width: @(Model.PersonalityScore)%"></div>
                                            </div>
                                        </div>
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">문제해결력</span>
                                                <span class="score-value text-brand">
                                                    @Model.ProblemSolvingScore / 100
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-brand" style="width: @(Model.ProblemSolvingScore)%"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="evaluation-summary mt-0">
                        <div class="recruit-info-box mb-2 mt-0">
                            <div class="info-icon-wrap">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div>
                                <strong>종합 평가</strong>
                                <div class="score-summary-line" style="margin-top:0.2em; margin-bottom:0.5em;">
                                    <span class="score-label">기술 점수:</span> <span class="score-value">@Model.TechnicalScore / 100</span>
                                    <span class="score-label">인성 점수:</span> <span class="score-value">@Model.PersonalityScore / 100</span>
                                    <span class="score-label">문제해결력 점수:</span> <span class="score-value">@Model.ProblemSolvingScore / 100</span>
                                </div>
                                <div class="score-summary-line" style="margin-bottom:0.5em;">
                                    <span class="score-label">@Model.Summary.Split('\n').LastOrDefault()</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">
                        <a href="@Url.Action("Index", "Recruit")" class="recruit-btn-gradient back-btn">
                            <i class="fas fa-home me-2"></i>
                            처음으로 돌아가기
                        </a>
                        <button onclick="window.print()" class="btn btn-print">
                            <i class="fas fa-print me-2"></i>
                            결과 출력하기
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.score-cards {
    padding-bottom: 0.5rem;
}
.score-card {
    margin-bottom: 0.75rem;
    padding: 0.75rem 1rem;
}
.progress {
    height: 8px;
}
.card-body {
    padding-top: 1.25rem;
    padding-bottom: 1.25rem;
}

.score-card {
    padding: 1rem;
    background-color: var(--light-gray);
    border-radius: 8px;
    transition: all 0.3s ease;
}

.score-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.score-label {
    color: var(--primary-color);
    font-size: 0.9em;
}

.score-value {
    font-weight: bold;
    font-size: 1.1em;
}

.progress {
    height: 8px;
    border-radius: 4px;
    background-color: var(--white);
}

.progress-bar {
    border-radius: 4px;
}

.alert {
    border: none;
    border-radius: 8px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border-left: 4px solid #28a745;
}

.alert-warning {
    background-color: #fff3cd;
    color: #856404;
    border-left: 4px solid #ffc107;
}

.info-value {
    font-size: 0.95em;
    word-break: normal;
    white-space: normal;
    display: inline-block;
    vertical-align: middle;
}

.score-summary-item {
    margin-bottom: 0.5em;
}

.evaluation-summary {
    margin-top: 0.5rem !important;
}

@@media print {
    .btn {
        display: none !important;
    }
    
    .card {
        border: 1px solid #ddd !important;
        box-shadow: none !important;
    }
}

.score-summary-line {
    font-size: 0.98em;
}
.score-summary-line:last-child {
    margin-bottom: 0.2em !important;
}
.score-label {
    margin-right: 0.3em;
}
.score-value {
    margin-right: 1.2em;
    color: #007bff;
}

.applicant-info-box {
    font-size: 0.9em;
}

.info-icon i {
    font-size: 0.95em;
}
</style> 