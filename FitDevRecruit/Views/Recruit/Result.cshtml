@model FitDevRecruit.Models.Report

@{
    ViewData["Title"] = "인적성 평가 - 결과";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        평가 결과 리포트
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4 class="text-primary mb-2">인적성 평가 완료</h4>
                        <p class="text-muted">솔로몬텍 인재 채용 평가 결과입니다.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-user me-2"></i>
                                        지원자 정보
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>이름:</strong></td>
                                            <td>@Model.CandidateName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>응시일:</strong></td>
                                            <td>@Model.TestDate.ToString("yyyy-MM-dd HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>지원자 ID:</strong></td>
                                            <td>@Model.CandidateId</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-trophy me-2"></i>
                                        점수 현황
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="score-cards">
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">기술 점수</span>
                                                <span class="score-value @(Model.TechnicalScore >= 60 ? "text-success" : "text-warning")">
                                                    @Model.TechnicalScore / 100
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar @(Model.TechnicalScore >= 60 ? "bg-success" : "bg-warning")" 
                                                     style="width: @(Model.TechnicalScore)%"></div>
                                            </div>
                                        </div>
                                        
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">인성 점수</span>
                                                <span class="score-value @(Model.PersonalityScore >= 10 ? "text-success" : "text-warning")">
                                                    @Model.PersonalityScore / 20
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar @(Model.PersonalityScore >= 10 ? "bg-success" : "bg-warning")" 
                                                     style="width: @(Model.PersonalityScore * 5)%"></div>
                                            </div>
                                        </div>
                                        
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">문제해결력</span>
                                                <span class="score-value @(Model.ProblemSolvingScore >= 20 ? "text-success" : "text-warning")">
                                                    @Model.ProblemSolvingScore / 100
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar @(Model.ProblemSolvingScore >= 20 ? "bg-success" : "bg-warning")" 
                                                     style="width: @(Model.ProblemSolvingScore)%"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="evaluation-summary mt-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="fas fa-clipboard-check me-2"></i>
                                    종합 평가
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="alert @(Model.Summary.Contains("우수") ? "alert-success" : "alert-warning") mb-0">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-clipboard-check me-3 mt-1"></i>
                                        <div>
                                            <strong>평가 결과:</strong><br>
                                            @Model.Summary
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">
                        <a href="@Url.Action("Index", "Recruit")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            처음으로 돌아가기
                        </a>
                        <button onclick="window.print()" class="btn btn-secondary">
                            <i class="fas fa-print me-2"></i>
                            결과 출력하기
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.score-card {
    padding: 1rem;
    background-color: var(--light-gray);
    border-radius: 8px;
    transition: all 0.3s ease;
}

.score-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.score-label {
    font-weight: 600;
    color: var(--primary-color);
}

.score-value {
    font-weight: bold;
    font-size: 1.1em;
}

.progress {
    height: 8px;
    border-radius: 4px;
    background-color: var(--white);
}

.progress-bar {
    border-radius: 4px;
}

.alert {
    border: none;
    border-radius: 8px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border-left: 4px solid #28a745;
}

.alert-warning {
    background-color: #fff3cd;
    color: #856404;
    border-left: 4px solid #ffc107;
}

@@media print {
    .btn {
        display: none !important;
    }
    
    .card {
        border: 1px solid #ddd !important;
        box-shadow: none !important;
    }
}
</style> 