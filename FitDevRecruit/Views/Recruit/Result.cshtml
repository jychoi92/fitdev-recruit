@model FitDevRecruit.Models.Report

@{
    ViewData["Title"] = "인적성 평가 - 결과";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold">평가 결과 리포트</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="result-desc mb-4">
                            <div class="result-desc-1">인적성 평가 완료</div>
                            <div class="result-desc-2">솔로몬텍 인재 채용 평가 결과입니다.</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0 fw-bold">지원자 정보</h6>
                                </div>
                                <div class="card-body">
                                    <div class="applicant-info-box d-flex flex-wrap align-items-center justify-content-between">
                                        <div class="info-item d-flex align-items-center mb-2 me-4">
                                            <span class="info-icon me-2"><i class="fas fa-user"></i></span>
                                            <span class="info-label fw-bold me-1">이름:</span>
                                            <span class="info-value">@Model.CandidateName</span>
                                        </div>
                                        <div class="info-item d-flex align-items-center mb-2 me-4">
                                            <span class="info-icon me-2"><i class="fas fa-calendar-alt"></i></span>
                                            <span class="info-label fw-bold me-1">응시일:</span>
                                            <span class="info-value">@Model.TestDate.ToString("yyyy-MM-dd HH:mm")</span>
                                        </div>
                                        <div class="info-item d-flex align-items-center mb-2">
                                            <span class="info-icon me-2"><i class="fas fa-id-badge"></i></span>
                                            <span class="info-label fw-bold me-1">지원자 ID:</span>
                                            <span class="info-value">@Model.CandidateId</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0 fw-bold">점수 현황</h6>
                                </div>
                                <div class="card-body">
                                    <div class="score-cards">
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">기술 점수</span>
                                                <span class="score-value text-brand">
                                                    @Model.TechnicalScore / 100
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-brand" style="width: @(Model.TechnicalScore)%"></div>
                                            </div>
                                        </div>
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">인성 점수</span>
                                                <span class="score-value text-brand">
                                                    @Model.PersonalityScore / 20
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-brand" style="width: @(Model.PersonalityScore * 5)%"></div>
                                            </div>
                                        </div>
                                        <div class="score-card mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="score-label">문제해결력</span>
                                                <span class="score-value text-brand">
                                                    @Model.ProblemSolvingScore / 100
                                                </span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-brand" style="width: @(Model.ProblemSolvingScore)%"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="evaluation-summary mt-0">
                        <div class="recruit-info-box mb-2 mt-0">
                            <div class="info-icon-wrap">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div>
                                <strong>종합 평가</strong><span class="small">@Model.Summary</span>
                            </div>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">
                        <a href="@Url.Action("Index", "Recruit")" class="recruit-btn-gradient back-btn">
                            <i class="fas fa-home me-2"></i>
                            처음으로 돌아가기
                        </a>
                        <button onclick="window.print()" class="btn btn-print">
                            <i class="fas fa-print me-2"></i>
                            결과 출력하기
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.score-card {
    padding: 1rem;
    background-color: var(--light-gray);
    border-radius: 8px;
    transition: all 0.3s ease;
}

.score-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.score-label {
    font-weight: 600;
    color: var(--primary-color);
}

.score-value {
    font-weight: bold;
    font-size: 1.1em;
}

.progress {
    height: 8px;
    border-radius: 4px;
    background-color: var(--white);
}

.progress-bar {
    border-radius: 4px;
}

.alert {
    border: none;
    border-radius: 8px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border-left: 4px solid #28a745;
}

.alert-warning {
    background-color: #fff3cd;
    color: #856404;
    border-left: 4px solid #ffc107;
}

@@media print {
    .btn {
        display: none !important;
    }
    
    .card {
        border: 1px solid #ddd !important;
        box-shadow: none !important;
    }
}
</style> 